/* Write your T-SQL query statement below */
select s.user_id ,
ROUND(
        ISNULL(
            CAST(
                SUM(
                    CASE When c.action = 'confirmed' THEN 1 ELSE 0
                    END
                )as float
            ) / NULLIF(count(c.user_id),0)
         ,0
        )
    ,2) as confirmation_rate
from Signups s
left join Confirmations c
on s.user_id = c.user_id 
group by s.user_id